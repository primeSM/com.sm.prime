{{>layout/header}}

<h1>게시글 수정</h1>
<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="title"> 글 번호 </label>
                <span type="text" class="form-control" id="id" >{{post.id}}</span>
            </div>
            <div class="form-group">
                <label for="title"> 제목 </label>
                <span type="text" class="form-control" id="title" >{{post.title}}</span>
            </div>
            <div class="form-group">
                <label for="author"> 작성자 </label>
                <span type="text" class="form-control" id="author" >{{post.author}}</span>
            </div>
            <div class="form-group">
                <label for="content"> 내용 </label>
                <span class="form-control" id="content">{{post.content}}</span>
            </div>
        </form>

        <a href="/posts/update/{{post.id}}" role="button" class="btn btn-secondary"> 수정 </a>
        <button type="button" class="btn btn-danger" id="btn-delete"> 삭제 </button>
    </div>
</div>

{{>layout/footer}}